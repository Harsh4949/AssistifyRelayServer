<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="?android:attr/windowBackground">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Assistify Relay"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_subheader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Setup the device to relay SMS reliably"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tv_header"
        app:layout_constraintStart_toStartOf="@id/tv_header"
        app:layout_constraintEnd_toEndOf="@id/tv_header"
        android:layout_marginTop="8dp" />

    <!-- Permissions Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_permissions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_permissions_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1) Permissions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_permissions_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grant SMS &amp; phone permissions so incoming messages are received in background."
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="6dp" />

            <!-- permission status row -->
            <TextView
                android:id="@+id/tv_permissions_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Unknown"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btn_request_permissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Permissions"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Device Admin & Battery Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_permissions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_admin_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2) Background reliability"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_admin_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Optional: request device admin or ask user to disable battery optimization to reduce background restrictions."
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tv_device_admin_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device admin: Not enabled"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_request_device_admin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Device Admin" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_ignore_battery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ignore Battery Optim." />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Register Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_register_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3) Register device"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_register_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register with backend to receive sessions and relay requests."
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="6dp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Device with Backend"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="15dp">

    <!-- Scrollable container -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:paddingBottom="30dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assistify Relay Setup"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#03A9F4"
                android:fontFamily="@font/montserratli"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tv_subheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure permissions &amp; reliability settings"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/montserratli"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="18dp"/>


            <!-- ===================== PERMISSIONS CARD ===================== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_permissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F0FFFF"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tv_permissions_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1) Permissions"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/montserratli"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_permissions_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grant SMS &amp; phone permissions so incoming messages relay properly."
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/montserratli"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/tv_permissions_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Unknown"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/montserratli"
                        android:layout_marginTop="10dp"/>

                    <Button
                        android:id="@+id/btn_request_permissions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Request Permissions"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:fontFamily="@font/montserratli"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!-- ===================== DEVICE ADMIN CARD ===================== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="18dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:background="#F0FFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_admin_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2) Background Reliability"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserratli"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_admin_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable device admin or ignore battery optimization to keep relaying active."
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/montserratli"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/tv_device_admin_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device Admin: Not enabled"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:fontFamily="@font/montserratli"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/btn_request_device_admin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable Admin"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:fontFamily="@font/montserratli"/>

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/btn_ignore_battery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ignore Battery"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="13sp"

                            android:fontFamily="@font/montserratli"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- ===================== REGISTER CARD ===================== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:background="#F0FFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_register_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3) Register Device"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/montserratli"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_register_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Register this device to backend for secure relaying."
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/montserratli"
                        android:layout_marginTop="6dp"/>

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register With Backend"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserratli"
                        android:layout_marginTop="14dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text=" "
                android:background="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10sp"

/>

            <!-- ===================== LIVE STATUS ===================== -->

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Device ID: Loading..."
                android:textSize="14sp"
                android:fontFamily="@font/montserratli"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_session_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Status: IDLE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratli"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"/>

            <ListView
                android:id="@+id/lv_sessions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/black"
                android:divider="#CCCCCC"
                android:dividerHeight="1dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
